class WasteRequest: """Kinda simple container for waste collection details. Might refactor later if this grows… we'll see. """

next_id = 1   # I *think* this should work fine as a simple counter.

def __init__(self, waste_type: str, weight_kg: float, location: str):
    # Not going to overthink validation here for now.
    
    self.request_id = WasteRequest.next_id
    WasteRequest.next_id += 1
    
    self.waste_type = waste_type
    self.weight_kg = weight_kg
    self.location = location
    
    # Starting everything as "Pending" — makes sense for now.
    self.status = "Pending"

def __str__(self):
    # I could've spaced this better but it's fine.
    return f"ID:{self.request_id} | Kind:{self.waste_type} | Wt:{self.weight_kg}kg | Addr:{self.location} | Status:{self.status}"

class WasteManager: """Manages the pile of incoming waste requests and tracks stats. TODO: Maybe later store these in a file? """

def __init__(self):
    # Using a list for now — maybe a dict later if I need fast lookups.
    self.requests = []

def add_request(self, rq: WasteRequest):
    # Just throwing requests into the list.
    self.requests.append(rq)
    # Using f-strings because why not.
    print(f"\n--> Added request #{rq.request_id} for {rq.waste_type}")

def update_status(self, req_id: int, new_status: str):
    # Probably could use a dict lookup but meh.
    found_flag = False
    for r in self.requests:
        if r.request_id == req_id:
            r.status = new_status
            print(f"\n(Info) Updated status of request {req_id} → {new_status}")
            found_flag = True
            break   # I guess there won't be duplicates anyway.
    
    # If we never found it, complain…
    if not found_flag:
        print(f"\n[Warn] Couldn't find any request with id={req_id} (did I typo something?)")

def view_all_requests(self):
    # I always forget to handle empty lists, so adding this check…
    if len(self.requests) == 0:
        print("\nThere are currently *no* waste requests. (Quiet day!)")
        return
    
    print("\n=== Waste Requests Overview ===")
    
    # Not sorting these — humans rarely bother unless necessary.
    for entry in self.requests:
        print(entry)
    
    print("--------------------------------")

def get_statistics(self):
    # Using slightly clunky counters here. Could optimize but no reason to.
    total_weight = 0
    by_type = {}
    by_status = {"Pending": 0, "Scheduled": 0, "Completed": 0}
    
    # Running through everything — again, dict could store these but not now.
    for rq in self.requests:
        total_weight += rq.weight_kg
        
        # Weight per category
        if rq.waste_type not in by_type:
            by_type[rq.waste_type] = 0
        by_type[rq.waste_type] += rq.weight_kg
        
        # Count statuses (note: if new statuses appear, they'll just… not be counted)
        if rq.status in by_status:
            by_status[rq.status] += 1
        else:
            # Eh, just record unexpected ones separately for now
            if "Other" not in by_status:
                by_status["Other"] = 0
            by_status["Other"] += 1
    
    print("\n=== Waste Stats ===")
    print(f"Total requests logged: {len(self.requests)}")
    print(f"Total estimated weight: {total_weight:.2f} kg")

    print("\nBreakdown by Type:")
    for t, wt in by_type.items():
        print(f" • {t}: {wt:.2f} kg")

    print("\nBreakdown by Status:")
    for st, c in by_status.items():
        print(f" • {st}: {c}")

    print("=====================")

~~~ Example usage (just kept it simple) ~~~

if name == "main": mgr = WasteManager()

# Adding a few sample requests.
# I should maybe auto-generate these later?
r1 = WasteRequest("Recyclable", 15.5, "123 Main St")
r2 = WasteRequest("General",     22.0, "456 Oak Ave")
r3 = WasteRequest("Hazardous",    1.2, "789 Pine Ln")

mgr.add_request(r1)
mgr.add_request(r2)
mgr.add_request(r3)

mgr.view_all_requests()

mgr.update_status(1, "Scheduled")
mgr.update_status(2, "Completed")
mgr.update_status(4, "Failed?")   # Yeah this ID won’t exist.

mgr.view_all_requests()

mgr.get_statistics()